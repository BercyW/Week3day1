    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="security.bercy.com.week3day1.MainActivity"



    >

    <fragment
        android:id="@+id/leftFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="security.bercy.com.week3day1.LeftFragment"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <FrameLayout
        android:id="@+id/rightFragmentTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
         />
    <FrameLayout
        android:id="@+id/rightFragmentBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
